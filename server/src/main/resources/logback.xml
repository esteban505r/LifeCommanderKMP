<configuration debug="true">
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>

    <!-- Read OS envs explicitly; fallback values on the right -->
    <variable name="LOG_LEVEL"   value="${env:LOG_LEVEL:-INFO}"/>
    <variable name="ENVIRONMENT" value="${env:ENVIRONMENT:-production}"/>
    <variable name="RELEASE"     value="${env:GIT_COMMIT:-unknown}"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %-5level %logger - %msg %X{requestId}%n</pattern>
        </encoder>
    </appender>

    <!-- Sentry with *new* config shape -->
    <appender name="SENTRY" class="io.sentry.logback.SentryAppender">
        <options>
            <!-- empty default disables Sentry cleanly when env not set -->
            <dsn>${env:SENTRY_DSN:-}</dsn>
            <environment>${ENVIRONMENT}</environment>
            <release>${RELEASE}</release>
        </options>
        <minimumEventLevel>ERROR</minimumEventLevel>
        <minimumBreadcrumbLevel>INFO</minimumBreadcrumbLevel>
    </appender>

    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="SENTRY"/>
    </root>

    <logger name="io.netty" level="WARN"/>
    <logger name="org.apache" level="WARN"/>
</configuration>
